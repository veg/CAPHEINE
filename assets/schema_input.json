{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/hverdonk/CAPHEINE/master/assets/schema_input.json",
    "title": "CAPHEINE pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "raw_sequences": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.f(ast)?a$",
                "errorMessage": "Raw sequences file must be provided and must have extension '.fa' or '.fasta'"
            },
            "ref_sequence": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.f(ast)?a$",
                "errorMessage": "Reference sequence file must be provided and must have extension '.fa' or '.fasta'"
            },
            "foreground_seqs": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.txt$",
                "errorMessage": "Foreground must be a valid file path to a text file"
            },
            "foreground_regexp": {
                "type": "string"
            }
        },
        "required": ["sample", "raw_sequences", "ref_sequence"]
    }
}
