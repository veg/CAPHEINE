nextflow_pipeline {

    name "Test pipeline with default settings"
    script "../main.nf"

    test("Simple test, no foreground provided. Params: default") {
        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
            }
        }

        then {
            assert workflow.success
        }
    }

}
