nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("Simple test, no foreground provided") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                test_branches = 'internal'
            }
        }

        then {
            assert workflow.success
        }
    }

    test("bad branches parameter (typo)") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                test_branches = 'inernal'
            }
        }

        then {
            assert !workflow.success
        }
    }

    test("bad code name (genetic code does not exist)") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                test_branches = 'internal'
                code = 'not_a_real_code'
            }
        }

        then {
            assert !workflow.success
        }
    }

    test("bad code name (only hyphy-style name is allowed)") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/mito_mouse_ref.fna"
                unaligned_seqs = "${projectDir}/tests/test_data/mito_raw_seqs.fna"
                test_branches = 'internal'
                code = 'Vertebrate Mitochondrial'
            }
        }

        then {
            assert !workflow.success
        }
    }

    test("bad code number (genetic code does not exist)") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                test_branches = 'internal'
                code = '999'
            }
        }

        then {
            assert !workflow.success
        }
    }

    test("mitochondrial translation table") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/mito_mouse_ref.fna"
                unaligned_seqs = "${projectDir}/tests/test_data/mito_raw_seqs.fna"
                code = 'Vertebrate-mtDNA'
                test_branches = 'internal'
            }
        }

        then {
            // note that vertebrate mitochondrial DNA appears to have internal stop codons for any analysis assuming the standard genetic code
            // hyphy does not record which genetic code was used, so we can't check for that directly
            // but the analysis success should indicate that the mitochondrial DNA was processed with the correct code
            assert workflow.success
        }
    }

    test("Forbid foreground_list AND foreground_regexp") {

        when {
            params {
                outdir = "$outputDir"
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                foreground_list = "${projectDir}/tests/test_data/pretend-foreground-seqs.txt"
                foreground_regexp = '_2023_09_'
                test_branches = 'internal'
            }
        }

        then {
            assert !workflow.success
        }
    }

    test("Foreground - regexp not provided") {

        when {
            params {
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                foreground_regexp = ""
                outdir = "$outputDir"
                test_branches = 'internal'
            }
        }

        then {
            assert !workflow.success
        }

    }

    test("Simple test - foreground regexp provided") {

        when {
            params {
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                foreground_regexp = '_2023_09_'
                outdir = "$outputDir"
                test_branches = 'internal'
            }
        }

        then {
            assert workflow.success
        }

    }

    test("Foreground - list not provided") {

        when {
            params {
                reference_genes = "${projectDir}/tests/test_data/pretend_DENV1_ref.fasta"
                unaligned_seqs = "${projectDir}/tests/test_data/pretend-raw-seqs.fasta"
                foreground_list = ""
                outdir = "$outputDir"
                test_branches = 'internal'
            }
        }

        then {
            assert !workflow.success
        }

    }

}
