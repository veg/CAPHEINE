nextflow_process {

    name "Test Process REMOVETERMINALSTOPCODON"
    script "modules/local/removeterminalstopcodon/main.nf"
    process "REMOVETERMINALSTOPCODON"

    tag "modules"
    tag "modules_"
    tag "removeterminalstopcodon"

    test("remove stop codons - fasta") {

        when {
            process {
                // H5N1 reference
                """
                input[0] = file(projectDir + '/tests/test_data/cds_from_genomic.fna', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                //{ assert snapshot(process.out).match() }
                { assert path(process.out.clean_ref_fasta[0]).exists() },
                { assert !path(process.out.clean_ref_fasta[0]).text.split("\n")[38].endsWith("TAG") },
            )
        }

    }

    test("remove stop codons - fasta with custom table id") {

        config "./nextflow.config"

        when {
            params {
                module_args = '--table 2'
            }
            process {
                // Vertebrate mitochondrial gene with a different translation table
                """
                input[0] = file(projectDir + '/tests/test_data/COXI_mouse_ref.fna', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },  // because we're using Vertebrate Mitochondrial DNA, if the code uses the Universal table it will find internal stop codons and fail
                { assert path(process.out.clean_ref_fasta[0]).exists() },
                { assert path(process.out.clean_ref_fasta[0]).size() > 0 }
            )
        }

    }

    test("remove stop codons - should specify mitochondrial table id but doesn't - fasta") {

        when {
            process {
                """
                input[0] = file(projectDir + '/tests/test_data/COXI_mouse_ref.fna', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert !process.success },  // because we're using Vertebrate Mitochondrial DNA, if the code uses the Universal table it will find internal stop codons and fail
                { assert process.errorReport.contains("Hyphy does not permit internal stop codons") }
            )
        }

    }

    test("internal stop codons - fasta") {

        when {
            process {
                // P. aeruginosa reference
                """
                input[0] = file(projectDir + '/tests/test_data/GCF_000006765_1_cds_from_genomic.fna', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert !process.success },
                //{ assert snapshot(process.out).match() }
                { assert process.errorReport.contains("Hyphy does not permit internal stop codons") }
            )
        }

    }

    test("remove stop codons - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = file(projectDir + '/tests/test_data/GCF_000006765_1_cds_from_genomic.fna', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
