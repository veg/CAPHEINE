nextflow_process {

    name "Test Process HYPHY_REMOVEDUPS"
    script "modules/local/hyphy/removedups/main.nf"
    process "HYPHY_REMOVEDUPS"

    tag "modules"
    tag "modules_"
    tag "hyphy"
    tag "hyphy/removedups"

    test("denv1 - fasta") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/test_data/DENV1_7seqs_withDups.fasta', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert process.out.deduplicated_seqs.exists() },
                { assert process.out.deduplicated_seqs.size() > 0 },
                { assert process.out.deduplicated_seqs.text == file('${projectDir}/tests/test_data/DENV1_7seqs.fasta').text }
            )
        }
    }

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used but keep the " - stub" suffix.
    test("denv1 - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/test_data/DENV1_7seqs_withDups.fasta', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
