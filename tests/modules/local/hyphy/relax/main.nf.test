nextflow_process {

    name "Test Process HYPHY_RELAX"
    script "modules/local/hyphy/relax/main.nf"
    process "HYPHY_RELAX"

    test("Testing if RELAX generates results") {

        when {
            process {
                """
                input[0] = [
                    'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups', \
                    file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta', checkIfExists: true), \
                    file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta.treefile', checkIfExists: true)
                ]
                input[1] = 'Foreground'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.relax_json[0][1]).exists() },
                { assert path(process.out.relax_json[0][1]).toString().endsWith('.RELAX.json') },
                // Check output json for correctness
                {
                    def json = new groovy.json.JsonSlurper().parseText(path(process.out.relax_json[0][1]).text)

                    // Check for correct RELAX settings
                    // def settings = json.analysis["settings"]
                    // assert settings["site-filter"]["site-filter"] == null

                    // Check that RELAX only ran on the selected internal branches
                    // regardless of branch tags, HyPhy will label test branches as "test" and reference branches as 
                    // "reference" in the output json. Branches that are neither test nor reference will be 
                    // labeled as "Unclassified" in the output, regardless of other tags in the tree itself.
                    def tested = json.tested["0"]

                    assert tested["Node5"] == "Test"
                    assert tested["Node6"] == "Test"
                    assert tested.findAll { k, v -> k.startsWith('Node') && k != 'Node5' && k != 'Node6' }.every { k, v -> v == "Reference" }
                    assert tested.findAll { k, v -> !(k.startsWith('Node')) }.every { k, v -> v == "Unclassified" }
                },
                // Verify metadata matches input
                { assert process.out.relax_json[0][0] == 'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups' },
                // Check version file exists and has correct format
                { assert path(process.out.versions[0]).exists() },
                { assert path(process.out.versions[0]).text.contains('hyphy:') }
            )
        }
    }

    test("RELAX stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups', \
                    file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta', checkIfExists: true), \
                    file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta.treefile', checkIfExists: true)
                ]
                input[1] = 'Foreground'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                // For stub test, just verify files exist with correct names
                { assert path(process.out.relax_json[0][1]).exists() },
                { assert path(process.out.relax_json[0][1]).toString().endsWith('.RELAX.json') },
                { assert process.out.relax_json[0][0] == 'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups' },
                { assert path(process.out.versions[0]).exists() },
                { assert path(process.out.versions[0]).text.contains('hyphy:') }
            )
        }

    }
}
