nextflow_process {

    name "Test Process HYPHY_PRIME"
    script "modules/local/hyphy/prime/main.nf"
    process "HYPHY_PRIME"

    test("Testing if PRIME generates results") {

        when {
            process {
                """
                input[0] = [[id: 'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups'], file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta', checkIfExists: true)]
                input[1] = [[id: 'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups'], file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta.treefile', checkIfExists: true)]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.prime_json[0][1]).exists() },
                { assert path(process.out.prime_json[0][1]).text.contains('PRIME') },
                // Check putput json for correctness
                { 
                    def json = new groovy.json.JsonSlurper().parseText(path(process.out.prime_json[0][1]).text)

                    // Check for correct PRIME settings
                    def settings = json.analysis
                    assert settings["residue_properties"] == "Atchley"

                    // Check that PRIME only ran on internal branches
                    def tested = json.tested["0"]
                    
                    // All test branches should contain 'node'
                    assert tested.findAll { k, v -> v == "test" }.every { k, v -> k.toLowerCase().contains("node") }

                    // No background branches should contain 'node'
                    assert tested.findAll { k, v -> v == "background" }.every { k, v -> !k.toLowerCase().contains("node") }
                },
                // Verify metadata matches input
                { assert process.out.prime_json[0][0] == [id:'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups'] },
                // Check version file exists and has correct format
                { assert path(process.out.versions[0]).exists() },
                { assert path(process.out.versions[0]).text.contains('hyphy:') }
            )
        }
    }

    test("PRIME stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [[id: 'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups'], file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta', checkIfExists: true)]
                input[1] = [[id: 'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups'], file(projectDir + '/tests/test_data/FBgn0000055_NT_033779.5_10_species_12_seqs-nodups.fasta.treefile', checkIfExists: true)]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                // For stub test, just verify files exist with correct names
                { assert path(process.out.prime_json[0][1]).exists() },
                { assert path(process.out.prime_json[0][1]).toString().endsWith('.PRIME.json') },
                { assert process.out.prime_json[0][0] == [id:'FBgn0000055_NT_033779.5_10_species_12_seqs-nodups'] },
                { assert path(process.out.versions[0]).exists() },
                { assert path(process.out.versions[0]).text.contains('hyphy:') }
            )
        }
    }
}
