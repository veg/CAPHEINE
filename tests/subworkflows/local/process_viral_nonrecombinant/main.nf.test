// TODO nf-core: Once you have added the required tests, please run the following command to build this file:
// nf-core subworkflows test process_viral_nonrecombinant
nextflow_workflow {

    name "Test Subworkflow PROCESS_VIRAL_NONRECOMBINANT"
    script "subworkflows/local/process_viral_nonrecombinant/main.nf"
    workflow "PROCESS_VIRAL_NONRECOMBINANT"

    tag "subworkflows"
    tag "subworkflows/process_viral_nonrecombinant"
    tag "removeambigseqs"
    tag "cawlign"
    tag "hyphy_cln"
    tag "iqtree"
    tag "hyphy_labeltree_list"


    test("denv1 - fasta") {
        when {
            workflow {
                """
                input[0] = [
                    [ id:'capsid_protein_C'], // meta map
                    file(projectDir + '/tests/test_data/pretend-raw-seqs.fasta', checkIfExists: true),
                ]
                input[1] = [
                    [ id:'capsid_protein_C' ],
                    file(projectDir + '/tests/test_data/capsid_protein_C_DENV1_ref.fasta', checkIfExists: true),
                ]
                input[2] = [
                    file(projectDir + '/tests/test_data/pretend-foreground-seqs.txt', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() },
                { assert path(workflow.out.cleaned[0][1]).exists() },
                { assert path(workflow.out.cleaned[0][1]).toString().endsWith('-clean.fasta') },
                { assert path(workflow.out.aligned[0][1]).exists() },
                { assert path(workflow.out.aligned[0][1]).toString().endsWith('-aligned.fasta') },
                { assert path(workflow.out.deduplicated[0][1]).exists() },
                { assert path(workflow.out.deduplicated[0][1]).toString().endsWith('-nodups.fasta') },
                { assert path(workflow.out.phylogeny[0][1]).exists() },
                { assert path(workflow.out.phylogeny[0][1]).toString().endsWith('.treefile') },
                { assert path(workflow.out.labeled_tree[0][1]).exists() },
                { assert path(workflow.out.labeled_tree[0][1]).toString().endsWith('-labeled.treefile') },
                { assert path(workflow.out.versions[0]).exists() },
                { assert path(workflow.out.versions[0]).text.contains('hyphy:') },
                { assert path(workflow.out.versions[0]).text.contains('iqtree:') },
                { assert path(workflow.out.versions[0]).text.contains('cawlign:') },
            )
        }
    }
}
