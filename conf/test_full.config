/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run CAPHEINE -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    reference_genes = 'https://raw.githubusercontent.com/veg/CAPHEINE/refs/heads/dev/tests/test_data/pretend_DENV1_ref.fasta'
    unaligned_seqs = '/Users/hverdonk/CAPHEINE/tests/test_data/pretend-raw-seqs.fasta'
    //unaligned_seqs = 'https://raw.githubusercontent.com/veg/CAPHEINE/refs/heads/dev/tests/test_data/pretend-raw-seqs.fasta'
    foreground_regexp = '^AY'
    outdir = "."

}
