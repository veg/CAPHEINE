/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run CAPHEINE -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

// Impose sensible resource limits for testing
process {
    withName: '.*' {
        cpus   = 4
        memory = 3.GB
        time   = 2.h
    }
    withName: 'HYPHYMPI_*' { cpus = 2 }
}

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    reference_genes = 'https://raw.githubusercontent.com/veg/CAPHEINE/refs/heads/hyphympi/tests/test_data/pretend_H5N1_ref.fasta'
    unaligned_seqs = 'https://raw.githubusercontent.com/veg/CAPHEINE/refs/heads/hyphympi/tests/test_data/H5N1_segment7_random40.fasta'
    foreground_regexp = 'cattle'
    outdir = "."

}
